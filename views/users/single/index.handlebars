<header class="intro-header" style="background-image: url('/img/about-bg.jpg')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="page-heading">
          <h1>{{user.username}}</h1>
          <hr class="small">
          <span class="subheading">{{user.firstName}} {{user.lastName}}</span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <form name="edit-user" method="POST" action="/users/{{user.username}}?_method=PUT">
        
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Account Type</label>
            <input type="text" class="form-control" name="accountType" value="{{user.accountType}}" required data-validation-required-message="Please enter Acount Type.">
            <p class="help-block text-danger"></p>
          </div>
        </div>

        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Account Status</label>
            <input type="text" class="form-control" name="accountStatus" value="{{user.accountStatus}}" required data-validation-required-message="Please enter Acount Status.">
            <p class="help-block text-danger"></p>
          </div>
        </div>

        <br>
        <div class="row">
          <div class="form-group col-xs-6 text-right">
              <button type="submit" class="btn btn-default">Edit</button>
          </div>
      </form>
    </div>
  </div>
</div>

