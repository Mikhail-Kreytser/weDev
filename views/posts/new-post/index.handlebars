        <div class="row control-group">
          <div class="form-group col s2 floating-label-form-group controls">
            <label>Bidding Deadline Date</label>
            <input type="date" class="form-control" id="datefield" name="bidingDeadlineDate"   required data-validation-required-message="Please enter a date and time.">
            <p class="help-block text-danger"></p>
          </div>

          <div class="form-group col s2 offset-s1 floating-label-form-group controls">
            <label>Bidding Deadline Time</label>
            <input type="time" class="form-control" id="datefield" name="bidingDeadlineTime"  required data-validation-required-message="Please enter a date and time.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col s2 floating-label-form-group controls">
            <label>Completion Deadline Date</label>
            <input type="date" class="form-control" id="datefield"name="completionDeadlineDate" required data-validation-required-message="Please enter a date and time.">
            <p class="help-block text-danger"></p>
          </div>
          <div class="form-group col s2 offset-s1 floating-label-form-group controls">
            <label>Completion Deadline Time</label>
            <input type="time" class="form-control" id="datefield" name="completionDeadlineTime" required data-validation-required-message="Please enter a date and time.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
