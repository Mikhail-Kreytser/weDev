    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      
      <form name="create-post" action="/posts/new-post" method="post">
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Title</label>
            <input type="text" class="form-control" placeholder="Title" name="title" required data-validation-required-message="Please enter a title.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Project Requirements and Specification</label>
            <input type="text" class="form-control" placeholder="Description" name="body" required data-validation-required-message="Please enter a body.">
            <p class="help-block text-danger"></p>
          </div>
        </div>

        {{!--<div class="row control-group">
