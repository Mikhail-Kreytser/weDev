<header class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="page-heading">
          <h4>Create A New Bid</h4>
          <hr class="small">
        </div>
      </div>
    </div>
  </div>
</header>
{{#if higherBid}}
            <div id="card-alert" class="card red lighten-5">
              <div class="card-content red-text">
                <i class="mdi-alert-error"></i>
                <p><center>Your new Bid is higher then your old one</center></p>
              </div>
            </div>
      {{/if}}
      <br><br><br>

<div class="container">
  <div class="row">

    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <form name="create-post" action="/posts/{{poster}}/{{slug}}/new-bid" method="post">
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Amount</label>
            <input type="number" class="form-control" min="0.01" step="0.01" max="{{totalMoney}}" value="50.00" name = "price" equired data-validation-required-message="Please enter a value." />
            <input type="hidden" name="username" value="{{poster}}"/>
            <input type="hidden" name="slug" value="{{slug}}"/>
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="form-group col-xs-12">
              <button type="submit" class="btn btn-default">Send</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
