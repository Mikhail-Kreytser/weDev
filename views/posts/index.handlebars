<header>
 <nav class="nav-extended grey darken-1">
    <div class="nav-wrapper grey darken-1">
    </div>
    <div class="nav-content grey darken-1">
      <ul class="tabs tabs-transparent">
        {{#if search}}
        <li class="tab">
          <a href="/#livePosts">live Posts</a>
        </li>
        {{else}}
        <li class="tab">
          <a class="active" href="/#livePosts">live Posts</a>
        </li>
        {{/if}}
        <li class="tab">
          <a href="/#workingPosts">Current Projects</a>
        </li>
        <li class="tab">
          <a href="/#closedPosts">Completed/Closed Projects</a>
        </li>
        {{#if search}}
        <li class="tab">
          <a class="active" href="/#allPosts">All Projects and Projects</a>
        </li>
        {{else}}
        <li class="tab">
          <a href="/#allPosts">All Projects and Projects</a>
        </li>
        {{/if}}
      </ul>
    </div>
  </nav>
</header>

<div  id="livePosts">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h4>Browse Live Posts</h4>
          <hr class="small">
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="input-field">
          <input id="myInputLivePosts" onkeyup="myFunctionLivePosts()" type="search" placeholder="Browse" >
          <label class="label-icon" for="search"><i class="material-icons">search</i></label>
        </div>
        {{#if customer}}
          <div class="create-post">
            <a href="/posts/new-post" class="btn-floating waves-effect red btn"><i class="material-icons">add</i></a>
          </div>
        {{/if}}
        <ul id="myULLivePosts" >
          {{#each livePosts}}
            <li class="collection">
              <a class="collection-item" href="/posts/{{this.user.username}}/{{this.slug}}/">
                <h4 class="col s5">{{this.title}}</h4>
                <p class="black-text">Bidding Deadline: {{this.bidingDeadline}}</p>
                <p class="black-text">Completion Deadline: {{this.completionDeadline}}</p>
                <p class="black-text"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Posted by {{this.user.username}}</p>
              </a>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

