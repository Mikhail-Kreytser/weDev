<div class="modal modal-fixed-footer" id="modal1">
  <div class="modal-content">
    <h4>Sign Up</h4>
      <div class="row">
          <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <form id="signUp" name="sign-up" action="/sign-up" method="post" class="col s12">
              <div class="row">
                  <div class="row">
                    <div class="input-field col s12">
                      <input name="username" id="username" type="text" class="validate" required="" aria-required="true">
                      <label for="username" data-error="wrong" data-success="right">Username</label>
                    </div>
              <div class="row">
                  <p>
                    <input name="accountType" type="radio" id="Customer" value="Customer" required="" />
                    <label for="Customer" data-error="wrong" data-success="right">Customer</label>
                    <input name="accountType" type="radio" id="Developer" value="Developer" />
                    <label for="Developer" data-error="wrong" data-success="right">Developer</label>
                  </p>
              </div>
            </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <input name ="email" id="email" type="email" class="validate" required="" aria-required="true">
                      <label for="email" data-error="wrong" data-success="right">Email</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <input name ="password" id="password" type="password" value="password" required="">
                      <label for="password" data-error="wrong" data-success="right">Password</label>
                    </div>
                  </div>
              </div>
              </form>
          </div>
      </div>
  </div>

  <div class="modal-footer">
    <button  type="submit" form="signUp" class="btn btn-flat modal-action modal-close">Register</button>
  </div>
</div>

