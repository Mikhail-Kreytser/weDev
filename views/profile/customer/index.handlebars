<header class="intro-header" style="background-image: url('/img/about-bg.jpg')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="page-heading">
          <h1>{{user.username}}</h1>
          <hr class="small">
          <span class="subheading">{{user.accountType}}</span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
  <div class="col-lg-1 col-lg-offset-2 col-md-10 col-md-offset-1">
      <img src="/profile_pics/{{profile.profileImage}}" class="img-rounded" alt="" style="width:200px">
    </div>
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <p>
        {{profile.bio}}
      </p>
      {{#each allPosts}}
       <div class="post-preview">
              
                  <h2 class="post-title">
                      {{this.title}}
                  </h2>
              </a>
              <p class="post-meta">Current bid: {{this.bid.price}}</p>
          </div>
          <hr>
      {{/each}}
    </div>
  </div>
</div>
