<div class="container">



          {{#if error}}
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <div class="alert alert-danger"><center>ERROR</center></div>
          </div>
          {{/if}}
          {{#if usernameTaken}}
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <div class="alert alert-danger"><center>Username is taken</center></div>
          </div>
          {{/if}}

          {{#if emailTaken}}
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <div class="alert alert-danger"><center>Email is taken</center></div>
          </div>
          {{/if}}
          
  <div class="row">


    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <form name="sign-up" action="/sign-up" method="post">


        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Username</label>
            <input type="text" class="form-control" name="username" required data-validation-required-message="Please enter your username.">
            <p class="help-block text-danger"></p>
          </div>
        </div>


        <div class="row control-group">        
          <div class="form-group col-xs-12 floating-label-form-group controls">
                <p>
                  <input name="accountType" type="radio" id="Customer" value="Customer" required />
                  <label for="Customer">Customer</label>
                  <input name="accountType" type="radio" id="Developer" value="Developer" />
                  <label for="Developer">Developer</label>
                </p>
          </div>
        </div>




        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Email Address</label>
            <input type="email" class="form-control" name="email" required data-validation-required-message="Please enter your email address.">
            <p class="help-block text-danger"></p>
          </div>
        </div>


        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <label>Password</label>
            <input type="password" class="form-control" name="password" required data-validation-required-message="Please enter your password.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="form-group col-xs-12">
              <button type="submit" class="btn">Register</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
